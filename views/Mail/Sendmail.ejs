                                        </div>
                                        <div class="form-check">
                                            <input class="form-check-input" type="radio" name="numberofmail" id="gridRadios2"
                                                value="2">
                                            <label class="form-check-label" for="gridRadios2">
                                                501-1000
                                            </label>
                                        </div>
                                        <div class="form-check mx-5 ">
                                            <input class="form-check-input" type="radio" name="numberofmail" id="gridRadios1"
                                                value="3">
                                            <label class="form-check-label" for="gridRadios1">
                                                1001-1500
                                            </label>
                                        </div>
                                        <div class="form-check">
                                            <input class="form-check-input" type="radio" name="numberofmail" id="gridRadios2"
                                                value="4">
                                            <label class="form-check-label" for="gridRadios2">
                                                1501-2000
                                            </label>
                                        </div>
                                        <div class="form-check mx-5 ">
                                            <input class="form-check-input" type="radio" name="numberofmail" id="gridRadios1"
                                                value="5">
                                            <label class="form-check-label" for="gridRadios1">
                                                2001-2500
                                            </label>
                                        </div>
                                        <div class="form-check">
                                            <input class="form-check-input" type="radio" name="numberofmail" id="gridRadios2"
                                                value="6">
                                            <label class="form-check-label" for="gridRadios2">
                                                2501-3000
                                            </label>
                                        </div>
                                    </div>
                                </fieldset>

                                <div class="col-md-12">
                                    <label for="inputEmail5" class="form-label">Email</label>
                                    <input type="email" name="email" class="form-control" id="inputEmail5">
                                </div>
                                
                                <div class="col-md-12">
                                    <label for="inputEmail5" class="form-label">password</label>
                                    <input type="password" name="password" class="form-control" id="inputEmail5">
                                </div>

                                <div class="text-center">
                                    <button type="submit" class="btn btn-primary">Submit</button>
                                    <button type="reset" class="btn btn-secondary">Reset</button>
                                </div>
                            </form><!-- End Multi Columns Form -->

                        </div>
                    </div>

                </div>
            </div>
        </section>

    </main><!-- End #main -->
