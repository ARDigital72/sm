<%- include('../layouts/header.ejs')%>
    <main id="main" class="main">

        <div class="pagetitle">
            <h1>Form Layouts</h1>
            <nav>
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a href="/">Home</a></li>
                    <li class="breadcrumb-item active">Add Admin</li>
                </ol>
            </nav>
        </div><!-- End Page Title -->
        <section class="section">
            <div class="row">
                <div class="col-lg-12">

                    <div class="card">
                        <div class="card-body">
                            <h5 class="card-title">Multi Columns Form</h5>
                            <!-- Multi Columns Form -->
                            <form action="/addadmin" method="post" class="row g-3">
                                <div class="col-md-12">
                                    <label for="inputName5" class="form-label">Your Name</label>
                                    <input type="text" name="name" class="form-control" id="inputName5">
                                </div>
                                <div class="col-md-12">
                                    <label for="inputEmail5" class="form-label">Email</label>
                                    <input type="email" name="email" class="form-control" id="inputEmail5">
                                </div>
                                <div class="col-md-12">
                                    <label for="inputEmail5" class="form-label">phone</label>
                                    <input type="number" name="phone" class="form-control" id="inputEmail5">
                                </div>
                                <div class="col-md-12">
                                    <label for="inputEmail5" class="form-label">scret key</label>
                                    <input type="text" name="key" class="form-control" id="inputEmail5">
                                </div>
                                <div class="col-md-12">
                                    <label for="inputEmail5" class="form-label">password</label>
                                    <input type="password" name="password" class="form-control" id="inputEmail5">
                                </div>
                                <div class="col-md-12">
                                    <label for="inputEmail5" class="form-label">conform password</label>
                                    <input type="password" name="conform_password" class="form-control"
                                        id="inputEmail5">
                                </div>
                                <fieldset class="row my-3">
                                    <legend class="col-form-label col-sm-2 pt-0">Radios</legend>
                                    <div class="col-sm-10 d-flex">
                                        <div class="form-check mx-5 ">
                                            <input class="form-check-input" type="radio" name="gender" id="gridRadios1"
                                                value="male">
                                            <label class="form-check-label" for="gridRadios1">
                                                male
                                            </label>
                                        </div>
                                        <div class="form-check">
                                            <input class="form-check-input" type="radio" name="gender" id="gridRadios2"
                                                value="female">
                                            <label class="form-check-label" for="gridRadios2">
                                                female
                                            </label>
                                        </div>
                                    </div>
                                </fieldset>
                                <div class="row mb-3">
                                    <label class="col-sm-2 col-form-label">State</label>
                                    <div class="col-sm-6">
                                        <select name="state" id="State" class="form-select" onchange="selectcity()">
                                            <option value="">--select State--</option>
                                            <% State.map((item,i)=>{%>
                                                <option value="<%=item.id%>">
                                                    <%=item.state%>
                                                </option>
                                                <%}) %>
                                        </select>
                                    </div>
                                </div>
                                <div class="row mb-3">
                                    <label class="col-sm-2 col-form-label">City</label>
                                    <div class="col-sm-6">
                                        <select name="city" class="form-select" id="city" onchange="Numberofmail()">
                                            <option value="">--select city--</option>
                                        </select>
                                    </div>
                                </div>

                                <div class="text-center">
                                    <button type="submit" class="btn btn-primary">Submit</button>
                                    <button type="reset" class="btn btn-secondary">Reset</button>
                                </div>
                            </form><!-- End Multi Columns Form -->
                        </div>
                    </div>
                </div>
            </div>
        </section>

    </main><!-- End #main -->
    <%- include('../layouts/footer.ejs')%>